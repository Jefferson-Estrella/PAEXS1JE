<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAEXS1JE.Login">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Semana 1 PAEX Jefferson Estrella" FontSize="24" HorizontalTextAlignment="Center"/>
            <Image Source="https://www.uisrael.edu.ec/wp-content/uploads/2023/01/logo-uisrael@2x-e1674848533171.png"/>
            <Image Source="android.png" WidthRequest="100" HeightRequest="100"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar Sesión" Clicked="btnIniciar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>